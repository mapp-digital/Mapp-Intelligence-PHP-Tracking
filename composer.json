{
    "name": "mapp-digital/mapp-intelligence-tracking",
    "version": "0.0.1",
    "description": "Mapp Intelligence - Server-side PHP tracking library",
    "homepage": "https://mapp.com/",
    "license": "MIT",
    "require": {
        "php": ">=5.3.3",
        "ext-curl": "*",
        "ext-mbstring": "*",
        "ext-zlib": "*"
    },
    "scripts": {
        "test": "phpunit",

        "lint": "composer lint-lib && composer lint-tests && composer lint-cron && composer lint-s2s",
        "lint-lib": "phpcs --standard=./ruleset.xml ./lib",
        "lint-tests": "phpcs --standard=./ruleset.xml ./tests",
        "lint-cron": "phpcs --standard=./ruleset.xml ./cronjob.php",
        "lint-s2s": "phpcs --standard=./ruleset.xml ./s2s.php",

        "start": "php -S 127.0.0.1:8000",

        "cron-success": "php ./cronjob.php -i 123451234512345 -d q3.webtrekk.net -f ./tmp/webtrekk.log --debug",
        "cron-fail": "php ./cronjob.php -i 111111111111111 -d q3.webtrekk.net -f ./tmp/webtrekk.log --debug"
    },
    "require-dev": {
        "phpunit/phpunit": "~6.0",
        "squizlabs/php_codesniffer": "~3.0"
    },
    "autoload": {
        "classmap": [
            "lib/"
        ],
        "files": [
            "lib/MappIntelligence.php"
        ]
    }
}
